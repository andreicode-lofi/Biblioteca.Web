@model Biblioteca.Servico.model.UsuarioModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}
<!-- #Erro mensagen-->
@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Erro"]
    </div>
}
<div class="login-page">
    <div class="container mt-5 mb-5">

        <div class="row justify-content-center">
            <!-- Formulário -->
            <div class="col-md-6 col-lg-4">
                <div class="card shadow p-4" style="background-color: rgba(52, 58, 64, 0.8); color: white;">
                    <!-- Texto de boas-vindas -->
                    <h2 class="text-center mb-4 discord-color">Bem-vindo Biblioteca.Web</h2>
                    <p class="text-center mb-4 text-muted">
                        A maneira mais fácil de organizar seus livros e administrar sua
                        biblioteca pessoal. Registre-se agora e tenha controle total sobre sua coleção!
                    </p>

                    <!-- Formulário de Login -->
                    <form method="post" asp-action="Login">
                        <h4 class="mb-3 discord-color">Entrar na sua conta</h4>
                        <div class="mb-3">
                            <label for="Email" class="form-label">E-mail</label>
                            <input type="email" class="form-control" id="Email" asp-for="Email"
                                placeholder="Digite seu e-mail" required>
                        </div>
                        <div class="mb-3">
                            <label for="Senha" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="Senha" asp-for="SenhaHas"
                                placeholder="Digite sua senha" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <hr class="col-5">
                        <span>ou</span>
                        <hr class="col-5">
                    </div>

                    <!-- Formulário de Registro -->
                    <form method="post" asp-action="RegistrarUsuario">
                        <h4 class="mb-3 discord-color">Criar uma nova conta</h4>
                        <p class="mb-4 text-muted">Comece sua jornada e tenha acesso total ao seu catálogo de livros.
                        </p>
                        <div class="mb-3">
                            <label for="Nome" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="Nome" asp-for="Nome"
                                placeholder="Digite seu nome" required>
                        </div>
                        <div class="mb-3">
                            <label for="EmailRegistro" class="form-label">E-mail</label>
                            <input type="email" class="form-control" id="EmailRegistro" asp-for="Email"
                                placeholder="Digite seu e-mail" required>
                        </div>
                        <div class="mb-3">
                            <label for="SenhaRegistro" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="SenhaRegistro" asp-for="SenhaHas"
                                placeholder="Crie uma senha" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Registrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* login-page: Usado para aplicar a imagem de fundo */
    .login-page {
        background-image: url('/images/login-Img.jpg');

        background-size: contain;
        background-repeat: no-repeat;
        background-position: center top;
        min-height: 60vh;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 25px !important;

        max-width: 80vw;
        margin: auto;
    }

    .container {
        padding-top: 30px;
        padding-bottom: 30px;
        width: 100%;
        max-width: 1309px;
        /* Limita a largura máxima */
    }

    .row {
        width: 100%;
    }

    /* Ajustando as colunas de forma mais compacta */
    .col-md-5 {
        padding-right: 1px;
        /* Aumenta o espaço à direita da imagem */
    }

    .col-md-6 {
        padding-left: 1px;
        /* Aumenta o espaço à esquerda do formulário */
    }

    /* Card centralizado */
    .card {
        max-width: 430px;
        width: 100%;
        margin: 0 auto;
        background-color: rgba(52, 58, 64, 0.7) !important;
        color: white;
        border-radius: 10px;
    }

    /* Aumentando o espaçamento entre o topo e o card */
    .card .form-label {
        font-weight: bold;
    }

    .card h2 {
        font-weight: 900;
        text-align: center;
    }

    .card .form-control {
        padding: 15px;
        font-size: 1rem;
    }

    .card .btn {
        border-radius: 10px;
        padding: 5px;
    }

    .card .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .card .btn-success {
        background-color: #28a745;
        border: none;
    }

    /* Espaçamento extra entre os formulários */
    .card hr.my-4 {
        border: 1px solid #6c757d;
    }

    /* Estilo da imagem no fundo */
    .col-md-5 .img-fluid {
        max-width: 60px !important;
        height: auto;
        border: 2px solid rgb(0, 0, 0);
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }
</style>